<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.expensescalculator.TipsAndTricks">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include2"
        layout="@layout/content_tips_and_tricks"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />
    />

    <TextView
        android:id="@+id/Basics"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_below="@+id/appBarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Basics of Money Management. Click to find out more!"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:fontFamily="sans-serif-medium"
        app:layout_anchor="@+id/include2"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Basics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Try Me!" />

    <TextView
        android:id="@+id/chronicspending"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="How to control Chronic Spending"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:fontFamily="sans-serif-medium"
       />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/chronicspending"
        android:layout_marginTop="34dp"
        android:text="Try Me!" />

    <TextView
        android:id="@+id/spendinggoals"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Reaching your spending goals!"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/chronicspending"
        android:layout_alignStart="@+id/chronicspending"
        android:fontFamily="sans-serif-medium"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="32dp"
        android:text="Try Me!" />


</RelativeLayout>
